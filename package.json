{
  "name": "serverless-graphql-api-gcp",
  "engines": {
    "node": "8"
  },
  "private": true,
  "description": "Serverless GraphQL API on Google Cloud Functions",
  "scripts": {
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "logs": "firebase functions:log",
    "clean": "rimraf 'dist/functions'",
    "build": "babel 'functions' --out-dir 'dist/functions'",
    "copy-deps": "cpx '*{package.json,yarn.lock}' 'dist/functions'",
    "predeploy:old": "yarn clean && yarn build && yarn copy-deps",
    "deploy:old": "gcloud beta functions deploy api --trigger-http --source='dist/functions'",
    "deploy": "firebase deploy --only functions",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "dependencies": {
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.0",
    "snyk": "^1.319.2",
    "firebase-tools": "^8.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "cpx": "^1.5.0",
    "rimraf": "^3.0.2",
    "serverless": "^1.70.0"
  },
  "snyk": true
}
